@model List<Movie>

<h2>Movies Found: @Model.Count</h2>

@foreach (Movie m in Model)
{
    <h4>Title: @m.Title </h4>
    <h4>Release Date: @m.Release_Date</h4>
    <h4>Runtime: @m.Runtime</h4>
    string url = "http://image.tmdb.org/t/p/w500/" + m.Poster_Path;
    <img src="@url">

    if (!IsFavorite)
        {
        <a>
            <button asp-action="Favorite" class="button1">Add to Favorites</button>
        </a>
    }
    else
    {
        <a>
            <button asp-action="Favorite" class="button1">Remove from Favorites</button>
        </a>
    }

}

